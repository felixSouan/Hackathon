let imgearth; 
let imgmars
let imgsun
function preload() {
//importing the images
  imgearth = loadImage('https://pngfre.com/wp-content/uploads/earth-png-from-pngfre-8-1024x934.png');
  imgmars = loadImage('https://upload.wikimedia.org/wikipedia/commons/f/f5/3D_Mars.png');
  imgsun = loadImage('https://png.pngtree.com/png-clipart/20230518/original/pngtree-realistic-sun-illustration-png-image_9164511.png');
}
function setup() {
  createCanvas(windowWidth, windowHeight);
//Height and Width are the same because it s a circle except for the earth because the png s width is smaller, so I made the width 
//bigger to make it a circle. I randomly assigned the sun a diameter of 300 and then the propotrions between the sun and the other 
//when proportionsfactor is bigger, it makes planets bigger and closer.
  imageMode(CENTER);
  let centerX = width / 2;
  let centerY = height / 2;
  let diametersun=300
  let proportionsfactor=30
  let diameterearth=diametersun*proportionsfactor/109
  let diametermars=diameterearth/1.88
  let distancesunearth=300-proportionsfactor
  let distancesunmars=distancesunearth*1.6
  image(imgearth, centerX+distancesunearth, centerY,     diameterearth+0.5*proportionsfactor, diameterearth);
  image(imgmars, centerX+distancesunmars, centerY, diametermars, diametermars);
  image(imgsun, centerX, centerY, diametersun, diametersun);
}
